Problema 9

#include <iostream>
using namespace std;

int main() {
    int totalSegundos, horas, minutos, segundos;
    cout << "Ingresa la cantidad de segundos: ";
    cin >> totalSegundos;

    horas = totalSegundos / 3600;
    totalSegundos %= 3600;
    minutos = totalSegundos / 60;
    segundos = totalSegundos % 60;

    cout << horas << " hora(s) " << minutos << " minuto(s) " << segundos << " segundo(s)" << endl;

    return 0;
}
